
<%- include('layouts/header'); -%>
<body>
    <%- include('layouts/nav'); -%>
   <h1 class="composeh1">Compose</h1>
   <h2 id="errors">
    <% if (typeof(errors) !='undefined' ) { for (let error of errors) { %>
        <p class="errors">
            <%= error.msg %>
        </h2>
        <% } } %>
</p>
    <form action="/compose" method="post" enctype="multipart/form-data">
        <div class="field">
            <label class="composeTitle">Title</label>
            <input type="text" name="postTitle" class="composeTitle">
        <textarea class="textarea" id="postBody" name="postBody" rows="5" cols="30"></textarea>                 
        </div>

        <div class="field">
            <label for="img">Image</label>
            <input type="file" id="image" name="myImage" accept="image/*"> 
        </div>

        <button class="btn" type="submit" name="button">Publish</button>
    </form>   
    <script type="text/javascript" src="/ckeditor/ckeditor.js"> </script>
    <script type="text/javascript" >
        CKEDITOR.replace('postBody');
    </script>
</body>

<%- include('layouts/footer'); -%>